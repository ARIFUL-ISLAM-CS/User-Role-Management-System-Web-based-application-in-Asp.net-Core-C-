
@model EmployeeManagementSystem.Models.Item


<form enctype="multipart/form-data" asp-controller="Items" asp-action="Edit" method="post" class="mt-3">
    <div class="modal-header">
        <h5 class="modal-title" id="editItemModalLabel">Edit product</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">

            <label>Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Image</label>
            <br />
            <img src="@Model.Image" height="65" width="60" />

            <input id="file" name="file" type="file" onchange="editImage(event)" />
            <span asp-validation-for="Image"></span>
            <input type="hidden" asp-for="Image" />
        </div>

        <div class="form-group">

            <label>Entry Date</label>
            <input asp-for="EntryDate" class="form-control" />
            <span asp-validation-for="EntryDate" class="text-danger"></span>

        </div>

        <div class="form-group">

            <label>Quantity</label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.CategoryID, "CategoryID", htmlAttributes: new { @class = "col-form-label" })
            @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <input type="submit" class="btn btn-primary" value="Save" />
    </div>

</form>



