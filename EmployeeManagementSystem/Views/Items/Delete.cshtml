
@model EmployeeManagementSystem.Models.Item

@{ ViewBag.Title = "Delete"; }

<div class="modal-header">
    <h5 class="modal-title" id="deleteItemModalLabel">Delete product</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="card">
        <img src="@Model.Image" />

        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
            <p class="card-text">
                @Html.DisplayNameFor(model => model.Category.Name):&nbsp;@Html.DisplayFor(model => model.Category.Name)
                <br />
                @Html.DisplayNameFor(model => model.Description):&nbsp;@Html.DisplayFor(model => model.Description)
                <br />
                @Html.DisplayNameFor(model => model.EntryDate):&nbsp;@Html.DisplayFor(model => model.EntryDate)
                <br />
                @Html.DisplayNameFor(model => model.Quantity):&nbsp;@Html.DisplayFor(model => model.Quantity)
            </p>
        </div>
    </div>
</div>
<div class="modal-footer">

    <form enctype="multipart/form-data" asp-controller="Items" asp-action="Delete" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <input type="submit" class="btn btn-primary" value="Delete" />

    </form>


</div>

