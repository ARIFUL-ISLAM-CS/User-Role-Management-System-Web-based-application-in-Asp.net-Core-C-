@model EmployeeManagementSystem.Models.Category

<form enctype="multipart/form-data" asp-controller="Categories" asp-action="Create" method="post" class="mt-3">
    <div class="modal-header">
        <h5 class="modal-title" id="categoryModalLabel">Add new category</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            Category :
            <input asp-for="Name" class="form-control" placeholder="Category Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br />
        <div id="0">
            <hr />
            <div class="form-group">
                Name :
                <input asp-for="Items[0].Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Items[0].Name" class="text-danger"></span>

            </div>
            <br />
            <div class="form-group">
                Description :
                <input asp-for="Items[0].Description" class="form-control" />
                <span asp-validation-for="Items[0].Description" class="text-danger"></span>

            </div>
            <br />
            <div class="form-group">
                Image
                <br />
                <img id="_0" src="~/Images/transparent_phone.jpg" width="300" data-tag="itemImageinCategory" />
                <input id="Image" name="Image" type="file" data-tag="_0" onchange="changeImage(this, event)" />
                <span asp-validation-for="Items[0].Image" class="text-danger"></span>

            </div>
            <br />
            <div class="form-group">
                <input asp-for="Items[0].EntryDate" class="form-control" />
                <span asp-validation-for="Items[0].EntryDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input asp-for="Items[0].Quantity" class="form-control" />
                <span asp-validation-for="Items[0].Quantity" class="text-danger"></span>
            </div>

        </div>
        <br />
        <hr />
        <div class="col-md-12">
            <button id="addModelButton" type="button" class="btn btn-info btn-block">Add more product</button>
        </div>
        <input id="sl" type="hidden" value="0" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <input type="submit" class="btn btn-primary" value="Save" />
    </div>}
</form>



